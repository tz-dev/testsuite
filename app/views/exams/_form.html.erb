<%= form_with(model: exam, local: true) do |form| %>
  <% if exam.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(exam.errors.count, "error") %> prohibited this exam from being saved:</h2>

      <ul>
      <% exam.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name, id: :exam_name %>
  </div>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_area :description, id: :exam_description %>
  </div>

  <div class="actions">
    <label for="shuffle_questions">Shuffle Questions</label>
    <%= form.check_box :shuffle_questions, id: :shuffle_questions %>
  </div>

  <div class="actions">
    <label for="shuffle_answers">Shuffle Answers</label>
    <%= form.check_box :shuffle_answers, id: :shuffle_answers %>
  </div>

  <div class="actions">
    <label>&nbsp;</label>
    <%= form.submit %>
  </div>
<% end %>
