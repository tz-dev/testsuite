<h2>Exams</h2>
</section>
<section id="main">
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Questions</th>
      <th>Shuffle Q.</th>
      <th>Shuffle A.</th>
      <th colspan="3" width="12%"></th>
    </tr>
  </thead>

  <tbody>
    <% @exams.each do |exam| %>
      <tr>
        <td><%= exam.name %></td>
        <td><%= exam.description %></td>
        <td align="center"><%= exam.questions %> / <%= Question.where(:exam => exam.id).size %></td>
        <td align="center"><%= exam.shuffle_questions %></td>
        <td align="center"><%= exam.shuffle_answers %></td>
        <td><%= link_to 'Show', exam, target: :_blank %></td>
        <td><%= link_to 'Edit', edit_exam_path(exam) %></td>
        <td><%= link_to 'Destroy', exam, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<a href="<%=new_exam_path %>"><button>New Exam</button></a>
</section>