<h2>Show Result #<%= @result.id %></h2>
</section>
<section id="main">
<div class="field">
  <label>User:</label>
  <%= User.find(@result.user_id).name %>
</div>

<div class="field">
  <label>Exam:</label>
  <%= Exam.find(@result.exam_id).name %>
</div>

<div class="field">
  <label>Questions:</label>
  <%= @result.questions %>
</div>

<div class="field">
  <label>Time:</label>
  <%= @result.time %>
</div>

<div class="field">
  <label>Result:</label>
  <%= @result.result %>%
</div>

<div class="field">
  <label>Settings:</label>
  <ul style="margin: 0; padding:0 0 0 20px; display: block; float: left;">
    <% if @result.settings.include?('Q') %><li>Shuffle Questions</li><% end %>
    <% if @result.settings.include?('A') %><li>Shuffle Answers</li><% end %>
    <% if @result.settings.include?('H') %><li>Hint Button</li><% end %>
    <% if @result.settings.include?('C') %><li>Check Button</li><% end %>
    <% if @result.settings.include?('T') %><li>Timer</li><% end %>
    <% if @result.settings.include?('N') %><li>Navigation</li><% end %>
  </ul>
</div>

<a class="center" href="<%= results_path %>"><button>Back</button></a>