<h2>Users</h2>
</section>
<section id="main">
  <a class="center" href="<%= new_user_path %>"><button>New User</button></a>
  <table>
    <thead>
      <tr>
        <th width="20%">Name</th>
        <th width="20%">Email</th>
        <th width="15%">Role</th>
        <th width="5%">Date</th>
        <th width="5%">Time</th>
        <th colspan="3" width="1%"></th>
      </tr>
    </thead>

    <tbody>
      <% @users.each do |user| %>
        <tr class="<%= cycle('even', 'odd') -%>">
          <td><%= link_to user.name.truncate(25), user %></td>
          <td><%= user.email.truncate(25) %></td>
          <td align="center"><%= user.role %></td>
          <td align="center"><%= user.created_at.to_s.split(' ')[0] %></td>
          <td align="center"><%= user.created_at.to_s.split(' ')[1] %></td>
        <td align="center"><a href="/users/<%= user.id %>"><img src="../img/icon_show.png" height="30" title="Show" /></a></td>
        <td align="center"><a href="/users/<%= user.id %>/edit"><img src="../img/icon_edit.png" height="30" title="Edit" /></a></td>
        <td align="center"><a data-confirm="Are you sure?" rel="nofollow" data-method="delete" href="/users/<%= user.id %>?user_id=<%= user.id %>"><img src="../img/icon_error.png" height="30" title="Delete" /></a></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <a class="center" href="<%= new_user_path %>"><button>New User</button></a>