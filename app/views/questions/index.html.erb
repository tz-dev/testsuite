<h2>Questions</h2>
</section>
<section id="main">
<table>
  <thead>
    <tr>
      <th>Exam</th>
      <th>Type</th>
      <th>Text</th>
      <th colspan="3" width="12%"></th>
    </tr>
  </thead>

  <tbody>
    <% @questions.each do |question| %>
      <tr>
        <td><%= Exam.find(question.exam).name %></td>
        <td><%= question.q_type %></td>
        <td><%= strip_tags(question.q_text).truncate(100) %></td>
        <td><%= link_to 'Show', question %></td>
        <td><%= link_to 'Edit', edit_question_path(question) %></td>
        <td><%= link_to 'Destroy', question, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<a href="<%= new_question_path %>"><button>New Question</button></a>
</section>