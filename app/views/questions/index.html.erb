<h2>Questions</h2>
</section>
<section id="main">
<a class="center" href="<%= new_question_path %>"><button>New Question</button></a>
<table>
  <thead>
    <tr>
      <th>Exam</th>
      <th>Type</th>
      <th>Text</th>
      <th colspan="3" width="1%"></th>
    </tr>
  </thead>

  <tbody>
    <% @questions.each do |question| %>
      <tr class="<%= cycle('even', 'odd') -%>">
        <td><%= Exam.find(question.exam).name %></td>
        <td><%= question.q_type %></td>
        <td><%= strip_tags(question.q_text).truncate(100) %></td>
        <td align="center"><a href="/questions/<%= question.id %>"><img src="../img/icon_show.png" height="30" /></a></td>
        <td align="center"><a href="/questions/<%= question.id %>/edit"><img src="../img/icon_edit.png" height="30" /></a></td>
        <td align="center"><a data-confirm="Are you sure?" rel="nofollow" data-method="delete" href="/questions/<%= question.id %>"><img src="../img/icon_error.png" height="30" /></a></td>
      </tr>
    <% end %>
  </tbody>
</table>
<a class="center" href="<%= new_question_path %>"><button>New Question</button></a>