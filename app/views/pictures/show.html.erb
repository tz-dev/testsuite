<h2>Show Picture</h2>
</section>
<section id="main">
<div class="field">
  <label>Image:</label>
  <img src="<%= @picture.image %>" />
</div>

<div class="field">
  <label>Exam:</label>
  <% if Exam.find(@picture.exam) != nil %><%= Exam.find(@picture.exam).name %><% else %>none<% end %>
</div>

<div class="field">
  <label>Used in:</label>
<%
	Question.where(exam: @picture.exam).each_with_index do |question, index|
		if question.q_text.include?(@picture.image.to_s)
			%><%= link_to 'Question ' + question.id.to_s, question %>&nbsp;&nbsp;&nbsp;<%
		end
	end
%>
</div>

<div class="field">
  <label>Date:</label>
  <%= @picture.created_at.to_s.split(' ')[0] %>
</div>

<div class="field">
  <label>Time:</label>
  <%= @picture.created_at.to_s.split(' ')[1] %>
</div>

<label>&nbsp;</label><a href="<%= edit_picture_path(@picture) %>"><button>Edit</button></a>