<h2>Login</h2>
</section>
<section id="main">
  <fieldset>
<%= form_tag sessions_path do |form| %>
    <div class="field">
      <label>Email:</label>
      <input type="text" name="email" id="email" autofocus>
    </div>
    <div class="field">
      <label>Password:</label>
      <%= password_field_tag :password %>
    </div>
  </fieldset>
    <div class="actions" style="margin-bottom: 10px !important">
      <a class="button center"><%= submit_tag "Login" %></a>
    </div>
<% end %>